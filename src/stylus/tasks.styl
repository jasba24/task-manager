@import "./vars.styl"

.card
	display grid
	justify-content center
	align-items center
	grid-template-columns repeat(3, 1fr)
	color $terciary-color

.card__container
	box-shadow 1px 1px 1px 1px black
	font-size 3rem

.card__container h1
	text-align center
	margin 1.2rem 0
	color $secondary-color

.card__content
	text-align justify
	margin 0 30px

.card__time
	margin-left 30px